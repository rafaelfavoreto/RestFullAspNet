@model IEnumerable<WebApplication1.Models.Alunos>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.aID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.aNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.aEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.aID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.aNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.aEmail)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.aID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.aID">Details</a> |
